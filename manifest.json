{
  "manifest_version": 2,
  "name": "CraftyWars",
  "short_name": "CW",
  "description": "A crafting calculator for Guild Wars 2. Enter your API key and this tool will calculate which recipes are craftable.",
  "version": "0.1.0",
  "minimum_chrome_version": "38",
  "icons": {
    "16": "img/icon_16.png",
    "128": "img/icon_128.png"
  },
  "app": {
    "background": {
      "scripts": [
        "js/background.js"
      ]
    }
  },
  "permissions": [
    "fileSystem",
    "storage",
    "unlimitedStorage",
    "https://render.guildwars2.com",
    "webview"
  ],
  "content_security_policy": "script-src 'self' http://xxxx 'unsafe-inline'; object-src 'self'; img-src https://render.guildwars2.com;",
  "web_accessible_resources": [
    "bootstrap/fonts/*"
  ]
}
